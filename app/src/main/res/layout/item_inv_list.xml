<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inv_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/inv_item_tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inv_item_tv_product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code: ABC123"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/inv_item_tv_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Qty: 100"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/inv_item_tv_unit_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cost: $10.00"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/inv_item_tv_total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $1000.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/inv_item_tv_supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier: Global Supplies"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/inv_item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 01/01/2025 10:30"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/inv_item_tv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By: John Doe"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>