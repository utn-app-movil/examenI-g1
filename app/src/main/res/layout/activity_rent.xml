<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TITLE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:id="@+id/tv_rent_nidia_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rent_nidia_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- FORM CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="20dp">

            <!-- Client Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rent_nidia_name"
                android:textStyle="bold"
                android:textColor="#555555"/>

            <EditText
                android:id="@+id/et_rent_nidia_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/rent_nidia_name"
                android:backgroundTint="#999999"
                android:layout_marginBottom="12dp"/>

            <!-- Last Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rent_nidia_lastname"
                android:textStyle="bold"
                android:textColor="#555555"/>

            <EditText
                android:id="@+id/et_rent_nidia_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/rent_nidia_lastname"
                android:backgroundTint="#999999"
                android:layout_marginBottom="12dp"/>

            <!-- Vehicle Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rent_nidia_vehicle_type"
                android:textStyle="bold"
                android:textColor="#555555"/>

            <Spinner
                android:id="@+id/sp_rent_nidia_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <!-- Plate -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rent_nidia_plate"
                android:textStyle="bold"
                android:textColor="#555555"/>

            <EditText
                android:id="@+id/et_rent_nidia_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/rent_nidia_plate"
                android:backgroundTint="#999999"
                android:layout_marginBottom="12dp"/>

            <!-- Mileage -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rent_nidia_mileage"
                android:textStyle="bold"
                android:textColor="#555555"/>

            <EditText
                android:id="@+id/et_rent_nidia_mileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/rent_nidia_mileage"
                android:inputType="number"
                android:backgroundTint="#999999"
                android:layout_marginBottom="12dp"/>

            <!-- Driver License -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rent_nidia_driver_license"
                android:textStyle="bold"
                android:textColor="#555555"/>

            <EditText
                android:id="@+id/et_rent_nidia_driver_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/rent_nidia_driver_license"
                android:backgroundTint="#999999"
                android:layout_marginBottom="12dp"/>

            <!-- BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_rent_nidia_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rent_nidia_save"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/btn_rent_nidia_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rent_nidia_update"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/btn_rent_nidia_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rent_nidia_delete"
                    android:backgroundTint="#F44336"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>

        <!-- LIST TITLE -->
        <TextView
            android:id="@+id/tv_rent_nidia_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rent_nidia_list_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:textColor="#333333"/>


        <ListView
            android:id="@+id/lv_rent_nidia_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#CCCCCC"
            android:dividerHeight="1dp"/>
    </LinearLayout>

</ScrollView>
