<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_ens"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FC">

    <!-- Todo el contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header azul -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#003087"
            android:orientation="vertical"
            android:paddingTop="48dp"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="Corporate Insurance"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Policy Management"
                android:textColor="#A8C8FF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Lista de pólizas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="-20dp"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F4FF"
                android:fontFamily="sans-serif-medium"
                android:padding="20dp"
                android:text="Active Policies"
                android:textColor="#003087"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/listViewPolicies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#E8E8E8"
                android:dividerHeight="1dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="60dp"
                android:text="No insurance policies registered\n\nTap the + button to add one"
                android:textColor="#666666"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <!-- BOTÓN FLOTANTE (+) → EL QUE FUNCIONA PERFECTO -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:backgroundTint="#003087"
        app:srcCompat="@android:drawable/ic_menu_add"
        app:tint="#FFFFFF"
        app:elevation="10dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>