<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#003F8A"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tvHeader_ens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_subtitle_ens"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle_ens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_add_policy_ens"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#005BBB"
                    android:padding="12dp"
                    android:background="#EEF3FF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/etPolicyNumber_ens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_policy_number_ens"
                        android:inputType="textCapCharacters"
                        android:layout_marginBottom="16dp" />

                    <Spinner
                        android:id="@+id/spinnerCompany_ens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />

                    <Spinner
                        android:id="@+id/spinnerType_ens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />

                    <EditText
                        android:id="@+id/etStartDate_ens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_start_date_ens"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_marginBottom="16dp" />

                    <EditText
                        android:id="@+id/etExpirationDate_ens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_expiration_date_ens"
                        android:clickable="true"
                        android:focusable="false"
                        android:layout_marginBottom="16dp" />

                    <EditText
                        android:id="@+id/etPremium_ens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_premium_ens"
                        android:inputType="numberDecimal"
                        android:layout_marginBottom="24dp" />

                    <Button
                        android:id="@+id/btnSave_ens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_register_policy_ens"
                        android:textAllCaps="false"
                        android:background="#005BBB"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnView_ens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View policy"
                        android:textAllCaps="false"
                        android:background="#003F8A"
                        android:textColor="#FFFFFF"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btnDelete_ens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete policy"
                        android:textAllCaps="false"
                        android:background="#B00020"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>