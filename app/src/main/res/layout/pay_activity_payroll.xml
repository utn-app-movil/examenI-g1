<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="?attr/actionBarSize">

        <!-- Personal information -->
        <EditText
            android:id="@+id/pay_etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_name"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pay_etFirstLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_first_last_name"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pay_etSecondLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_second_last_name"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pay_etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_phone"
            android:inputType="phone"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pay_etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pay_etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_address"
            android:inputType="textPostalAddress"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pay_etCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_country"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <!-- Payroll info -->
        <EditText
            android:id="@+id/pay_etEmployeeNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_employee_number"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pay_etPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_position"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pay_etSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_salary"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/pay_etIban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pay_hint_iban"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_label_month" />

        <Spinner
            android:id="@+id/pay_spMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_label_bank" />

        <Spinner
            android:id="@+id/pay_spBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/pay_btnAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pay_btn_add" />

            <Button
                android:id="@+id/pay_btnUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pay_btn_update" />

            <Button
                android:id="@+id/pay_btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pay_btn_delete" />
        </LinearLayout>

        <Button
            android:id="@+id/pay_btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_btn_clear" />

        <!-- List -->
        <ListView
            android:id="@+id/pay_lvPayroll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>