<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="250px"
    tools:context=".vehActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextVehicleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID del vehículo" />

            <EditText
                android:id="@+id/editTextChargeDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de carga"
                android:inputType="date" />

            <EditText
                android:id="@+id/editTextEstimatedAutonomy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Autonomía estimada (km)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editTextInitialBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Porcentaje de batería inicial"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextFinalBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Porcentaje de batería final"
                android:inputType="number" />

            <Spinner
                android:id="@+id/spinnerVehicleBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editTextOwnerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Datos del dueño del vehículo" />

            <Spinner
                android:id="@+id/spinnerVehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Guardar" />

        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVehicles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp" />

</LinearLayout>
